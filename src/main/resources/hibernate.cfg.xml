<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
    	<!-- All the configuration properties goes here. -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">SECRET123</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/vertexdb</property>
        <property name="connection_pool_size">10</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>
        
        <!-- Bellow is all the mapped beans -->
        <mapping class="com.fmi.javaee.vertex.user.UserBean" />

    </session-factory>
</hibernate-configuration>